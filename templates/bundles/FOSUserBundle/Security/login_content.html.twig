{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="signin-logo tx-center tx-24 tx-bold tx-inverse">supply <span class="tx-info tx-normal">area</span></div>
    <div class="tx-center mg-b-40">{{ 'Please sign in!' | trans() }}</div>

    <div class="form-group">
        <input class="form-control" type="text" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username' | trans }}" required="required" autocomplete="username" autofocus>
    </div>
    <div class="form-group">
        <input class="form-control" type="password" name="_password" placeholder="{{ 'security.login.password' | trans }}" required="required" autocomplete="current-password">
    </div>
    <input type="submit" class="btn btn-info btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit' | trans }}">

</form>